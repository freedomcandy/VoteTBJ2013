<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgs480x800"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SingInActivity" >
    
    
    

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:background="@drawable/detailinfoarea480x800"
            >

            <ImageView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listtitle480x800" />

            <ImageView
                android:id="@+id/voteimagearea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dip"
                android:background="@drawable/detailsimagearea480x800" />

            <ImageView
                android:id="@+id/voteimagez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dip" />

            <TextView
                android:id="@+id/txtdetailname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="90dip"
                android:layout_marginTop="1dip"
                android:text=""
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/voteinfoarea"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/voteimagearea"
                android:background="@drawable/detailinfoarea480x800" />

            <TextView
                android:id="@+id/votename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voteimagearea"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:text=""
                android:textColor="@color/input_name"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/votedesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/votename"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dip"
                android:text=""
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/detailsline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/votedesc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:background="@drawable/detailsline480x800" />

            <TextView
                android:id="@+id/voteaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsline"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:text="Address:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsline"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/voteaddress"
                android:text=""
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/votephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:text="Phone:  "
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/votephone"
                android:text=""
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/voteweb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:text="WebSite:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/voteweb"
                android:text=""
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/getvotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/web"
                android:layout_marginTop="3dip"
                android:layout_centerHorizontal="true"
                android:background="@drawable/detailvotebtn" />

            <ImageButton
                android:id="@+id/getback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/getvotes"
                android:layout_marginTop="1dip"
                android:layout_centerHorizontal="true"
                android:background="@drawable/detailbackbtn" />
            
            
            <ImageButton
                android:id="@+id/getprevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/getvotes"
                android:layout_marginTop="1dip"
                android:layout_toLeftOf="@id/getback"
                android:layout_marginRight="1dip"
                android:background="@drawable/detailpreviousbtn" />


            <ImageButton
                android:id="@+id/getnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/getvotes"
                android:layout_marginLeft="1dip"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@id/getback"
                android:background="@drawable/detailnextbtn" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>