<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgs480x800"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SingInActivity" >

    <ImageView
        android:id="@+id/listtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listtitle480x800" />

    <ImageView
        android:id="@+id/listname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listtitle"
        android:layout_marginTop="20dip"
        android:background="@drawable/list_titlename480x800" />

    <TextView
        android:id="@+id/listtitlename"
        android:layout_below="@id/listtitle"
        android:layout_marginTop="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:textColor="@android:color/black"
        android:text="123" />
    
    <ListView
        android:id="@+id/votelist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/listname"
        android:layout_marginTop="5dip"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/transparent"
        android:dividerHeight="10px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="#41e9f3"
         />
    

</RelativeLayout>